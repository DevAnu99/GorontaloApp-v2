<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/background"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provinsi Gorontalo"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:id="@+id/ProvGorontalo"
        android:layout_above="@+id/Semboyan"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15.0dp"
        android:layout_marginLeft="10dp"
        android:shadowColor="#000000"
        android:shadowRadius="10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aadati hula hula to sara', sara' hula hula to Kur'ani"
        android:id="@+id/Semboyan"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="11sp"
        android:textColor="#fff"
        android:textStyle="italic"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ProvGorontalo"
        android:layout_alignStart="@+id/ProvGorontalo"
        android:shadowColor="#000000"
        android:shadowRadius="10"/>

</RelativeLayout>